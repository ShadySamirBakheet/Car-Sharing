<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.home.ui.MenuFragment"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/goToProfile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin=".1dp"
        app:contentPadding="@dimen/_6sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:layout_width="@dimen/_22sdp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_3sdp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/check1">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_personal" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingHorizontal="@dimen/_8sdp"
                android:textSize="@dimen/_13ssp"
                android:textFontWeight="600"
                android:textColor="@color/txtColor1"
                android:text="Personal Details"/>

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_next"
                app:tint="@color/btnColor1" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/goToMyTrip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin=".1dp"
        app:contentPadding="@dimen/_6sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:layout_width="@dimen/_22sdp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_3sdp"
                android:padding="@dimen/_4sdp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/check1">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/my_trip"
                    app:tint="@color/white" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingHorizontal="@dimen/_8sdp"
                android:textSize="@dimen/_13ssp"
                android:textFontWeight="600"
                android:textColor="@color/txtColor1"
                android:text="My Trip"/>

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_next"
                app:tint="@color/btnColor1" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_16sdp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/logOut"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin=".1dp"
        app:contentPadding="@dimen/_6sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:layout_width="@dimen/_22sdp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_3sdp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/check1">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_log_out" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingHorizontal="@dimen/_8sdp"
                android:textSize="@dimen/_13ssp"
                android:textFontWeight="600"
                android:textColor="@color/txtColor1"
                android:text="Sign Out"/>

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_next"
                app:tint="@color/btnColor1" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_16sdp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin=".1dp"
        app:contentPadding="@dimen/_6sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:layout_width="@dimen/_22sdp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_3sdp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/check1">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_contact_us" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingHorizontal="@dimen/_8sdp"
                android:textSize="@dimen/_13ssp"
                android:textFontWeight="600"
                android:textColor="@color/txtColor1"
                android:text="Contact Us"/>

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_next"
                app:tint="@color/btnColor1" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:visibility="gone"
        android:layout_margin=".1dp"
        app:contentPadding="@dimen/_6sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:layout_width="@dimen/_22sdp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_3sdp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/check1">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_condition_of_terms"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingHorizontal="@dimen/_8sdp"
                android:textSize="@dimen/_13ssp"
                android:textFontWeight="600"
                android:textColor="@color/txtColor1"
                android:text="Condition of terms"/>

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_next"
                app:tint="@color/btnColor1" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>